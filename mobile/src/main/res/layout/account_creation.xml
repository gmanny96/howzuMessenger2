<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/again"
        android:text="Try again"
        android:textColor="@color/lighttheme"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignTop="@+id/text"
        android:layout_alignBottom="@+id/text"
        android:background="@color/grey500"
        android:layout_margin="8dp"/>

    <ProgressBar
        android:id="@+id/load"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text"
        android:layout_alignBottom="@+id/text" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text"
        android:layout_toRightOf="@+id/load"
        android:text="Verifying"
        android:layout_toLeftOf="@+id/again"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical|start"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_marginTop="8dp"
        android:id="@+id/number"
        android:text="+919560083681"
        android:layout_below="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_toLeftOf="@+id/edit"
        android:background="@color/lighttheme"/>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/number"
        android:layout_alignBottom="@+id/number"
        android:background="@color/lighttheme"
        android:src="@drawable/pencil"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/hint"
        android:layout_below="@+id/number"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:text="Please make sure you have a working SMS plan."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>