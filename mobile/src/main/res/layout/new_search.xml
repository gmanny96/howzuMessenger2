<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/sicon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="14dp"
        android:src="@drawable/magnifyv"
        android:tint="@color/lightsecondary" />


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/searchb"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_toRightOf="@+id/sicon"
        android:background="@color/transparent"
        android:hint="Enter name or number"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/searchb"
        android:background="@drawable/shadowlight" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/shadow"/>

</RelativeLayout>